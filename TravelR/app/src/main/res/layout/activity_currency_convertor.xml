<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConvertor">

    <TextView
        android:id="@+id/currencyconvertortext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        android:text="Currency Convertor"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/entercurrencytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entercurrencytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/lobster"
        android:text="Enter Currency"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/currencyinput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyconvertortext" />

    <Button
        android:id="@+id/convertcurrencybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="98dp"
        android:text="Convert"
        app:layout_constraintBottom_toTopOf="@+id/currencyoutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyinput" />

    <EditText
        android:id="@+id/currencyinput"
        android:layout_width="318dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="78dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Currency"
        app:layout_constraintBottom_toTopOf="@+id/convertcurrencybutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entercurrencytext" />

    <TextView
        android:id="@+id/currencyoutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="195dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertcurrencybutton" />
</androidx.constraintlayout.widget.ConstraintLayout>